<form bindsubmit="bindsubmit">
  <input type="text" hidden="{{true}}" name="_id" value="{{detail._id}}"  />
  <view class="item">
    姓名：
    <input type="text" name="realname" value="{{detail.realname}}" />
  </view>
  <radio-group class="item" name="gender">
    性别：
    <view>
      <radio value="1" checked="{{detail.gender!=2?true:false}}" />
      男
      <radio value="2" checked="{{detail.gender==2?true:false}}" />
      女
    </view>
  </radio-group>
  <picker mode="region" value="{{region}}" class="item" bindchange="bindRegionChange" name="region">
    <view>选址地址：{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
  </picker>
  <view class="item">
    <image src="{{image}}" mode="widthFix" bindtap="addPicture" />
    <input name="image" value="{{image}}" hidden="{{true}}" />
  </view>
  <view class="item">
    <text>介绍：</text>
    <textarea name="intro" value="{{detail.intro}}"></textarea>
  </view>
  <button type="primary" form-type="submit">提交</button>
</form>