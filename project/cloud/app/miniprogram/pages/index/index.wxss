/* miniprogram/pages/list/list.wxss */
page{
  background: rgb(233,232,228)
}
.container{
    margin:15rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .item{
    width: 356rpx;
    height:620rpx;
    margin-bottom: 15rpx;
    background: white;
  }
  .img{
    width:100%;
    height:445rpx;
  }
  .jianjie{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    width: 300rpx;
    font-size: 26rpx;
    color:#666;
    margin-left: 20rpx;
    height: 70rpx;
  }
  .user{
    display: flex;
    align-items: center;
    margin: 20rpx 0 0 20rpx;
  }
  .avatar{
    border-radius:50%;overflow:hidden;display:block;
    height: 60rpx;
    width: 60rpx;
  }
  .nickname{
    color:#999;
    font-size:28rpx;
    margin-left: 20rpx;
  }