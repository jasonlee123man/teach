.videoContainer{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 50rpx auto;
    width: 700rpx;
}
video{
    border:1px solid #ccc;
    height: 150rpx;
    width: 300rpx;
}

image{
    width: 750rpx;
    border:1rpx solid #ccc;
}
.section{
  width: 700rpx;
  margin: 0 auto;
   padding: 5rpx;
}
.title{
  font-weight: bold;
  margin: 20rpx;
}


.user{
  display: flex;
  align-items: center;
  margin: 30rpx;
}
.avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
 
}
.nickName{
  font-size: 30rpx;
  color: #484846;
  margin-left: 30rpx;
}