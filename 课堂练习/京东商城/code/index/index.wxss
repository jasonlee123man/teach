page{
  background: #f1f2f6;
}
.container{
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  flex-wrap:wrap;
}
.item {
  width: 355rpx;
  margin: 10rpx;
  background: white;
}

.pro_image {
  width: 350rpx;
  height: 350rpx;
}

.title {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 0.8rem;
}
.price{
  color: red;
}

.bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn{
  font-size: 0.6rem;
  height: 45rpx;
  line-height: 45rpx;
  border: 1px solid #e1e1e1;
  margin: 10rpx;
}